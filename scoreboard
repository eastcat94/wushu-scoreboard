<script>
/*
  自动从 Google Sheet 的 gviz JSON 接口读取数据并更新页面
  已配置为你的表格 ID 与 gid（Score sheet）。
  - Sheet ID: 1qGA-x86Xt7qEXwzO_Nx0RwaFr7yO2x3kocqA_nTfA0w
  - gid: 387691548
  - 每 5 秒刷新一次
  映射依据：页面截图所示，选中了 B:D 的区域，行索引从 0 开始：
    rows[0] -> B1..D1 (标题)
    rows[1] -> B2..D2 (选手英文名)
    rows[2] -> B3..D3 (选手中文名)
    rows[3] -> B4..D4 (单位/club)
    rows[4] -> B5..D5 (A组得分 / B组得分 / 裁判长扣分 标签)
    rows[5] -> B6..D6 (A组数值 / B组数值 / penalty)
    rows[6] -> B7..D7 (Final Score label)
    rows[7] -> B8..D8 (Final Score value)
*/
const SPREADSHEET_ID = "1qGA-x86Xt7qEXwzO_Nx0RwaFr7yO2x3kocqA_nTfA0w";
const GID = "387691548";
const INTERVAL_MS = 5000;

function gvizUrl() {
  // 使用公开的 gviz 接口（你的 sheet 必须已经 Publish to the web 或该表格可被读取）
  return `https://docs.google.com/spreadsheets/d/${SPREADSHEET_ID}/gviz/tq?tqx=out:json&gid=${GID}`;
}

function safeCell(rows, rIndex, cIndex) {
  if (!rows || rIndex < 0 || rIndex >= rows.length) return null;
  const row = rows[rIndex];
  if (!row.c || cIndex < 0 || cIndex >= row.c.length) return null;
  const cell = row.c[cIndex];
  if (!cell) return null;
  return cell.v !== undefined ? cell.v : (cell.f !== undefined ? cell.f : null);
}

function applyTable(table) {
  if (!table || !table.rows) return;
  const rows = table.rows;

  // 按截图映射的列/行（若你的表格位置改变，请告诉我我再调整）
  const name = safeCell(rows,1,0) || "—";
  const cnname = safeCell(rows,2,0) || "—";
  const club = safeCell(rows,3,0) || "—";

  const labelA = safeCell(rows,4,0) || "A组得分";
  const labelB = safeCell(rows,4,1) || "B组得分";
  const labelPenalty = safeCell(rows,4,2) || "裁判长扣分";

  const valA = safeCell(rows,5,0) || "—";
  const valB = safeCell(rows,5,1) || "—";
  const valPenalty = safeCell(rows,5,2) || "—";

  const finalLabel = safeCell(rows,6,0) || "Final Score 最终得分";
  const finalVal = safeCell(rows,7,0) || "—";

  // 更新 DOM
  document.getElementById('name').innerText = name;
  document.getElementById('cnname').innerText = cnname;
  document.getElementById('club').innerText = club;

  document.getElementById('leftLabels').innerText = labelA;
  document.getElementById('centerLabels').innerText = labelB;
  document.getElementById('penaltyLabel').innerText = labelPenalty;

  document.getElementById('scoreA').innerText = formatNumber(valA);
  document.getElementById('scoreB').innerText = formatNumber(valB);
  document.getElementById('sideA').innerText = formatNumber(valA);
  document.getElementById('sideB').innerText = formatNumber(valB);
  document.getElementById('sidePenalty').innerText = valPenalty;

  document.getElementById('finalLabel').innerText = finalLabel;
  document.getElementById('finalScore').innerText = formatNumber(finalVal);
  document.getElementById('updatedAt').innerText = (new Date()).toLocaleString();

  // 右侧快速信息
  document.getElementById('sideName').innerText = name;
  document.getElementById('sideClub').innerText = club;
}

function formatNumber(v){
  // 尝试把字符串/数字格式化成保留两位小数或整数格式
  if (v === null || v === undefined) return "—";
  const n = Number(v);
  if (!isNaN(n)) {
    // 若为整数则显示整数，否则保留两位
    return (n % 1 === 0) ? String(n) : n.toFixed(2);
  }
  return String(v);
}

async function fetchAndUpdate(){
  try {
    const res = await fetch(gvizUrl(), {cache: "no-store"});
    if (!res.ok) throw new Error("网络错误: " + res.status);
    const txt = await res.text();
    // 清除 gviz 的前缀并 parse
    const jsonText = txt.replace(/^[\s\S]*?google\.visualization\.Query\.setResponse\(/, '').replace(/\);?\s*$/, '');
    const data = JSON.parse(jsonText);
    applyTable(data.table);
  } catch (err) {
    console.error("读取表格失败：", err);
  }
}

// 初次加载并循环刷新
fetchAndUpdate();
setInterval(fetchAndUpdate, INTERVAL_MS);

</script>
</body>
</html>
